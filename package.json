{
  "name": "spending-monitor",
  "version": "0.1.0",
  "description": "AI-powered alerts for credit card transactions",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "pnpm setup:deps",
    "setup:deps": "pnpm install && pnpm -r --if-present install:deps",
    "setup:data": "echo 'ðŸš€ Setting up data: Starting DB + migrations + sample data + Keycloak' && pnpm db:start && sleep 5 && pnpm db:upgrade && pnpm seed:all",
    "build": "turbo build",
    "dev": "turbo dev",
    "db:start": "pnpm --filter @*/db run db:start",
    "db:stop": "pnpm --filter @*/db run db:stop",
    "db:upgrade": "pnpm --filter @*/db run upgrade",
    "db:revision": "pnpm --filter @*/db run revision",
    "db:seed": "pnpm --filter @*/db seed",
    "db:verify": "pnpm --filter @*/db verify",
    "seed:db": "pnpm --filter @*/db seed",
    "seed:keycloak": "pnpm --filter @*/auth setup-keycloak",
    "seed:keycloak-with-users": "pnpm --filter @*/auth setup-keycloak-with-users",
    "seed:all": "pnpm db:seed && pnpm seed:keycloak-with-users",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "check": "turbo check",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "test": "turbo test",
    "storybook": "turbo storybook",
    "build-storybook": "turbo build-storybook",
    "status": "scripts/status-check.sh",
    "prepare": "husky install",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "dotenv-cli": "^10.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^16.1.5",
    "semantic-release": "^24.2.7",
    "turbo": "^2.5.6"
  },
  "lint-staged": {
    "packages/ui/**/*.{js,jsx,ts,tsx,css,md,html,json}": [
      "cd packages/ui && pnpm prettier --write --",
      "cd packages/ui && pnpm eslint --max-warnings 0 --"
    ],
    "packages/api/**/*.py": [
      "cd packages/api && uv run ruff format -- --respect-gitignore",
      "cd packages/api && uv run ruff check --"
    ],
    "packages/db/**/*.py": [
      "cd packages/db && uv run ruff format -- --respect-gitignore",
      "cd packages/db && uv run ruff check --"
    ],
    "packages/auth/**/*.py": [
      "cd packages/auth && uv run ruff format -- --respect-gitignore",
      "cd packages/auth && uv run ruff check --"
    ]
  },
  "packageManager": "pnpm@9.0.0"
}
